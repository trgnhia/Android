<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryColorLight"
    android:orientation="vertical"
    tools:context=".InputContacts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_your_name"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_your_phone_number"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_your_website"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtLocate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_your_location"
            android:inputType="text"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="503dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imHappy"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/white_face" />

            <ImageView
                android:id="@+id/imNorm"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/normal_face" />

            <ImageView
                android:id="@+id/imSad"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/nigga_face" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>